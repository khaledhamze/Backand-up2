@model AspNetMVC.Models.Product

@{
    ViewData["Title"] = "Details";
}
<div class="card" style="width: 40rem;">
    <div class="card-header">
        <h1>Details</h1>
    </div>
    <div class="card-body">
        <blockquote class="blockquote mb-0">
            <h3 class="card-title  p-3">@Html.DisplayFor(model => model.Name)</h3>

            <img src="  @Html.DisplayFor(model => model.ImageUrl)" class="card-img-top" alt="">

            <p class="card-text pt-2"> @Html.DisplayFor(model => model.Description)</p>


            <div class="alert alert-warning" role="alert">
                ! Max 1 per kund och hushåll
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <p class="text-danger price pt-2"> @Html.DisplayFor(model => model.Price):-</p>

                <button class="btn btn-outline-info">
                    <i class="fas fa-shopping-cart me-2"></i>
                    Beställ
                </button>
            </div>




            <div class="card-footer ">
                <small class="text-muted"><i class="fas fa-box text-success me-2"></i> lagerstatus</small>
                <div class="class=d-flex justify-content-around text-info p-3">
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </blockquote>
    </div>


</div>
    













